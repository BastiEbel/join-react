datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String @id @default(uuid())
  email         String @unique
  password      String
  name          String
  contacts      Contact[]
  createdTasks  AddTask[]   @relation("CreatedTasks")
  visibleTasks  AddTask[]   @relation("VisibleTasks")
}

model Contact {
  id      String       @id @default(uuid())
  name    String
  email   String       @unique
  phone   String
  zipCode String?
  userId  String
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks   AddTask[]    @relation("TaskContacts")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
}

model AddTask {
  id              String @id @default(uuid())
  title           String
  description     String
  dueDate         DateTime
  prio            String
  category        String
  status          String
  createdBy       User           @relation("CreatedTasks", fields: [createdById], references: [id])
  createdById     String
  contacts        Contact[]      @relation("TaskContacts")
  relatedTasks    AddTask[]      @relation("RelatedTasks")
  relatedByTasks  AddTask[]      @relation("RelatedTasks")
  visibleFor      User[]         @relation("VisibleTasks")
}